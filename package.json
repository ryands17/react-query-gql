{
  "version": "1.0.0",
  "description": "Snowpack setup with GraphQL Codegen and react-query",
  "private": true,
  "scripts": {
    "dev": "run-p start generate:schema::watch",
    "start": "snowpack dev",
    "build": "snowpack build",
    "test": "jest",
    "generate:schema": "graphql-codegen --config codegen.yml",
    "generate:schema::watch": "yarn generate:schema --watch",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "postinstall": "husky install"
  },
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-query": "3.16.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.5",
    "@graphql-codegen/typescript": "1.22.1",
    "@graphql-codegen/typescript-operations": "1.18.0",
    "@graphql-codegen/typescript-react-query": "1.3.1",
    "@snowpack/app-scripts-react": "2.0.1",
    "@snowpack/plugin-dotenv": "2.1.0",
    "@snowpack/plugin-react-refresh": "2.5.0",
    "@snowpack/plugin-typescript": "1.2.1",
    "@testing-library/jest-dom": "5.13.0",
    "@testing-library/react": "11.2.7",
    "@types/chai": "4.2.18",
    "@types/prettier": "2.2.3",
    "@types/react": "17.0.9",
    "@types/react-dom": "17.0.6",
    "@types/snowpack-env": "2.3.3",
    "@types/testing-library__jest-dom": "5.9.5",
    "graphql": "15.5.0",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lint-staged": "11.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.0",
    "snowpack": "3.5.4",
    "ts-jest": "26.5.6",
    "typescript": "4.3.2",
    "typesync": "0.8.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.{ts,tsx,json,md}": "prettier --write"
  }
}
