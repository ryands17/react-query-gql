{
  "scripts": {
    "dev": "run-p start generate:schema::watch",
    "start": "snowpack dev",
    "build": "snowpack build",
    "test": "jest",
    "generate:schema": "graphql-codegen --config codegen.yml",
    "generate:schema::watch": "yarn generate:schema --watch",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\""
  },
  "dependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-query": "2.26.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.19.4",
    "@graphql-codegen/typescript": "1.19.0",
    "@graphql-codegen/typescript-operations": "1.17.12",
    "@graphql-codegen/typescript-react-query": "0.1.1",
    "@snowpack/app-scripts-react": "1.12.6",
    "@snowpack/plugin-dotenv": "2.0.5",
    "@snowpack/plugin-react-refresh": "2.3.9",
    "@snowpack/plugin-typescript": "1.1.1",
    "@testing-library/jest-dom": "5.11.6",
    "@testing-library/react": "11.2.2",
    "@types/chai": "4.2.14",
    "@types/prettier": "2.1.5",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "@types/snowpack-env": "2.3.3",
    "@types/testing-library__jest-dom": "5.9.5",
    "graphql": "15.4.0",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "snowpack": "2.18.4",
    "ts-jest": "26.4.4",
    "typescript": "4.1.3",
    "typesync": "0.8.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json,md}": "prettier --write"
  }
}
