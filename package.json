{
  "version": "1.0.0",
  "description": "Snowpack setup with GraphQL Codegen and react-query",
  "private": true,
  "scripts": {
    "dev": "run-p start generate:schema::watch",
    "start": "snowpack dev",
    "build": "snowpack build",
    "test": "jest",
    "generate:schema": "graphql-codegen --config codegen.yml",
    "generate:schema::watch": "yarn generate:schema --watch",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "postinstall": "husky install"
  },
  "dependencies": {
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-query": "3.31.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.2.2",
    "@graphql-codegen/typescript": "2.3.0",
    "@graphql-codegen/typescript-operations": "2.2.0",
    "@graphql-codegen/typescript-react-query": "3.1.0",
    "@snowpack/app-scripts-react": "2.0.1",
    "@snowpack/plugin-dotenv": "2.2.0",
    "@snowpack/plugin-react-refresh": "2.5.0",
    "@snowpack/plugin-typescript": "1.2.1",
    "@testing-library/jest-dom": "5.15.0",
    "@testing-library/react": "12.1.2",
    "@types/chai": "4.2.22",
    "@types/prettier": "2.4.1",
    "@types/react": "17.0.34",
    "@types/react-dom": "17.0.11",
    "@types/snowpack-env": "2.3.4",
    "@types/testing-library__jest-dom": "5.14.1",
    "graphql": "15.6.0",
    "husky": "7.0.4",
    "jest": "26.6.3",
    "lint-staged": "11.1.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "snowpack": "3.8.8",
    "ts-jest": "26.5.6",
    "typescript": "4.4.4",
    "typesync": "0.8.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.{ts,tsx,json,md}": "prettier --write"
  }
}
